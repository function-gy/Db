{
    "name": "gy/db",
    "description": "A db component",
    "type": "library",
    "license": "Apache-2.0",
    "keywords": [
        "php",
        "coroutine",
        "db"
    ],
    "authors": [
        {
            "name": "gaoyang",
            "email": "1256005331@qq.com"
        }
    ],
    "require": {
        "php": ">=7.1",
        "ext-swoole": ">=4.4",
        "ext-redis": "*",
        "ext-pdo": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.9"
    },
    "suggest": {
        "swoole/library": "Required to use database, and the swoole version is less than 4.4.17"
    },
    "autoload": {
        "psr-4": {
            "gyDb\\DB\\": "src/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "cs-fix": "php-cs-fixer fix $1"
    }
}